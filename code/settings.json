{
  /* TELEMETRY */
  // --------------------------------------------------- //
  "telemetry.telemetryLevel": "off",
  /* WORKBENCH SETTINGS */
  // --------------------------------------------------- //
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.enablePreview": false,
  "workbench.list.smoothScrolling": true,
  "workbench.layoutControl.enabled": false,
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "top",
  /* EXPLORER SETTINGS */
  // --------------------------------------------------- //
  "explorer.compactFolders": false,
  "explorer.confirmPasteNative": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock*, yarn.lock, pnpm-lock*, bun.lockb, .eslint*, prettier*, tsconfig*",
    "pyproject.toml": "poetry.lock, .python-version",
    ".env": ".env*, .venv*",
  },
  /* BREADCRUMBS */
  // --------------------------------------------------- //
  "breadcrumbs.enabled": false,
  /* EDITOR SETTINGS */
  // --------------------------------------------------- //
  "editor.fontFamily": "'Consolas', 'monospace', 'Droid Sans Fallback'",
  "editor.minimap.enabled": false,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.rulers": [
    79,
    120
  ],
  "editor.renderControlCharacters": false,
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "gutter",
  "editor.detectIndentation": true,
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "off",
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.formatOnPaste": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.mouseWheelScrollSensitivity": 2,
  "editor.smoothScrolling": true,
  "editor.linkedEditing": true,
  "editor.mouseWheelZoom": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
  },
  "editor.suggestSelection": "first",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  /* WINDOW SETTINGS */
  // --------------------------------------------------- //
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "never",
  "window.menuBarVisibility": "hidden",
  "window.restoreWindows": "none",
  "window.confirmSaveUntitledWorkspace": false,
  /* TERMINAL SETTINGS */
  // --------------------------------------------------- //
  "terminal.integrated.cursorStyleInactive": "underline",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.copyOnSelection": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "underline",
  /* GIT SETTINGS */
  // --------------------------------------------------- //
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  /* JAVASCRIPT & TYPESCRIPT SETTINGS */
  // --------------------------------------------------- //
  "javascript.preferences.quoteStyle": "single",
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "[javascript]": {
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false,
  },
  /* PYTHON SETTINGS */
  // --------------------------------------------------- //
  "python.languageServer": "Pylance", // ms-python.vscode-pylance
  "python.testing.unittestEnabled": false, // ms-python.python
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [],
  "python.venvPath": "~/.cache/pypoetry/virtualenvs/",
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
    }
  },
  /* HTML */
  // --------------------------------------------------- //
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true,
    },
  },
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true,
    },
  },
  /* EXTENSIONS/FILES SETTINGS */
  // --------------------------------------------------- //
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.xml": "html",
    "*.svg": "html",
    "*.html": "html",
    "django.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*.css": "css",
    "**/base_templates/**/*.html": "django-html",
    "**/base_templates/**/*.css": "css",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
  },
  "files.hotExit": "off",
  "symbols.hidesExplorerArrows": false,
  "extensions.ignoreRecommendations": true,
  /* EMMET SETTINGS */
  // --------------------------------------------------- //
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "django-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
  },
  /* FILES & SEARCH SETTINGS */
  // --------------------------------------------------- //
  "files.defaultLanguage": "{activeEditorLanguage}",
  "files.exclude": {
    "**/.git": false,
    "USE_GITIGNORE": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true,
  },
}